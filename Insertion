#Insertion program:
#include<stdio.h>
void main(){
int a[100];
int n;
printf("enter the array size");
scanf("%d",&n);
for(int i=0;i<=1;i++){
scanf("%d",&a[i]);
}
int pos;
printf("enter the position :");
scanf("%d",&pos);
int ele;
printf("enter the element :");
scanf("%d",&ele);
for(int i=0;i<pos-1;i++){
a[i]=a[i-1];
}
a[pos-1]=ele;
for(int i=0;i<=n;i++){
printf("%5d",a[i]);
}
return;
}

#output:
enter the array size5
1
2
enter the position :3
enter the element :1
    0    0    1    0    0    0
